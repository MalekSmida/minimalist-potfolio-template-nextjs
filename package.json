{
  "name": "minimalist-potfolio-template-nextjs",
  "description": "A minimalist portfolio template created using Nextjs and TailwindCSS",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Malek Smida"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
